{
  "dashboard": {
    "id": null,
               "title": "PawfectRadar Team Dashboard",
           "tags": ["pawfectradar", "team", "operations"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Customer Support Metrics",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(support_tickets_created_total[24h])",
            "legendFormat": "New Tickets/Day"
          },
          {
            "expr": "avg(support_ticket_resolution_time_hours)",
            "legendFormat": "Avg Resolution Time (hrs)"
          },
          {
            "expr": "rate(support_tickets_resolved_total[24h])",
            "legendFormat": "Resolved/Day"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Sitter Performance",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sitter_rating_avg)",
            "legendFormat": "{{sitter_name}}"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true,
                "instance": true
              },
              "renameByName": {
                "sitter_name": "Sitter",
                "Value": "Rating",
                "sitter_bookings_total": "Bookings"
              }
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Quality Assurance",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(incident_reports_total[7d])",
            "legendFormat": "Incidents/Week"
          },
          {
            "expr": "rate(safety_concerns_total[7d])",
            "legendFormat": "Safety Issues/Week"
          },
          {
            "expr": "rate(positive_feedback_total[7d])",
            "legendFormat": "Positive Feedback/Week"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Operational Efficiency",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(booking_creation_duration_seconds[5m])",
            "legendFormat": "Booking Creation Time"
          },
          {
            "expr": "rate(payment_processing_duration_seconds[5m])",
            "legendFormat": "Payment Processing Time"
          },
          {
            "expr": "rate(customer_support_response_time_minutes[5m])",
            "legendFormat": "Support Response Time"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (seconds/minutes)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Customer Satisfaction Trends",
        "type": "graph",
        "targets": [
          {
            "expr": "avg(review_rating_total) by (week)",
            "legendFormat": "Weekly Avg Rating"
          },
          {
            "expr": "rate(review_submitted_total[7d])",
            "legendFormat": "Reviews/Week"
          },
          {
            "expr": "rate(customer_complaints_total[7d])",
            "legendFormat": "Complaints/Week"
          }
        ],
        "yAxes": [
          {
            "label": "Rating/Count",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "System Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"pawfectsitters-backend\"}",
            "legendFormat": "Backend"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "Database"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Redis"
          },
          {
            "expr": "up{job=\"nginx\"}",
            "legendFormat": "Nginx"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "1m",
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    }
  }
}

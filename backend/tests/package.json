{
  "name": "pawfectradar-tests",
  "version": "1.0.0",
  "description": "Quantum-grade test suites for PawfectRadar platform",
  "scripts": {
    "test:unit": "jest --config jest.unit.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "test:security": "npm run test:unit:security && npm run test:integration:security",
    "test:unit:security": "jest --config jest.security.config.js",
    "test:integration:security": "jest --config jest.integration.security.config.js",
    "test:coverage": "jest --coverage --coverageDirectory=tests/results/coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance",
    "test:quantum": "npm run test:all && npm run test:security",
    "report:generate": "node tests/utils/generate-report.js",
    "report:view": "open tests/results/test-report.html"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/testing": "^10.4.20",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@types/bcrypt": "^6.0.0",
    "artillery": "^2.0.0",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "express": "^5.1.0",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.0",
    "reflect-metadata": "^0.2.2",
    "socket.io-client": "^4.7.0",
    "supertest": "^6.3.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/supertest": "^2.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "backend/src/**/*.ts",
      "frontend/src/**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testResultsProcessor": "jest-html-reporter"
  }
}

# Database
DATABASE_URL="postgresql://pawfectradar_user:secure_password_here@localhost:5432/pawfectradar_prod"

# JWT
JWT_SECRET="production-jwt-secret-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="production-refresh-secret-change-this-in-production"
JWT_REFRESH_EXPIRES_IN="30d"

# Stripe (Production keys)
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME="pawfectradar"
CLOUDINARY_API_KEY="your-production-api-key"
CLOUDINARY_API_SECRET="your-production-api-secret"

# Email (SendGrid)
SENDGRID_API_KEY="SG.production-sendgrid-key"
SENDGRID_FROM_EMAIL="noreply@pawfectradar.com"

# SMS (Twilio)
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="your-production-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Google OAuth
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# App Configuration
NODE_ENV="production"
PORT=3001
CORS_ORIGIN="https://pawfectradar.com,https://app.pawfectradar.com"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN="https://your-production-sentry-dsn@sentry.io/project-id"

# AI Services
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Payment Processing
CASH_APP_CLIENT_ID="your-cash-app-client-id"
CASH_APP_CLIENT_SECRET="your-cash-app-client-secret"
APPLE_PAY_MERCHANT_ID="your-apple-pay-merchant-id"

# WebSocket
WS_PORT=3002
WS_CORS_ORIGIN="https://pawfectradar.com"

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="pawfectradar-assets"

# Monitoring & Analytics
MIXPANEL_TOKEN="your-mixpanel-token"
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
